{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {},
  "rules": {
    "no-bitwise": 0,
    "camelcase": 1,
    "curly": 0,
    "eqeqeq": 0,
    "wrap-iife": [
      1,
      "any"
    ],
    "no-use-before-define": [
      1,
      {
        "functions": false
      }
    ],
    "new-cap": 1,
    "no-caller": 1,
    "quotes": [
      0,
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-undef": 0,
    "no-unused-vars": 0,
    "strict": [
      2,
      "safe"
    ],
    "indent": [
      1,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      1,
      {
        "code": 180,
        "ignoreComments": true
      }
    ],
    "no-empty": 1
  }
}
